<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Pagina2">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp"
            android:onClick="voltarPagina"
            android:text="Anterior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:onClick="proximaPagina"
            android:text="PrÃ³ximo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/escolhaApp"
            android:layout_width="228dp"
            android:layout_height="42dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="88dp"
            android:text="Escolha do App"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imagemPedra"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="10dp"
            android:onClick="selecionarPedra"
            app:layout_constraintEnd_toStartOf="@+id/imagemPapel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/escolhaApp"
            app:srcCompat="@drawable/pedra" />

        <TextView
            android:id="@+id/placarJogador"
            android:layout_width="44dp"
            android:layout_height="22dp"
            android:layout_marginTop="424dp"
            android:layout_marginEnd="16dp"
            android:text="0"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/textoPlacarJogador"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/valorFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="204dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="204dp"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textoPlacarApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="140dp"
            android:text="App"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemPedra" />

        <ImageView
            android:id="@+id/imagemPapel"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:onClick="selecionarPapel"
            app:layout_constraintEnd_toStartOf="@+id/imagemTesoura"
            app:layout_constraintStart_toEndOf="@+id/imagemPedra"
            app:layout_constraintTop_toBottomOf="@+id/imagemApp"
            app:srcCompat="@drawable/papel" />

        <ImageView
            android:id="@+id/imagemApp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="152dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="152dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/branco" />

        <TextView
            android:id="@+id/textoPlacarJogador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginEnd="56dp"
            android:text="Jogador"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemTesoura" />

        <TextView
            android:id="@+id/textoPlacar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="180dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="180dp"
            android:text="Placar"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemPapel" />

        <ImageView
            android:id="@+id/imagemTesoura"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="138dp"
            android:layout_marginEnd="10dp"
            android:onClick="selecionarTesoura"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagemPapel"
            app:layout_constraintTop_toBottomOf="@+id/escolhaApp"
            app:srcCompat="@drawable/tesoura" />

        <TextView
            android:id="@+id/placarApp"
            android:layout_width="41dp"
            android:layout_height="23dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="424dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textoPlacarApp"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>